<div class='app'>
  <%= form_with(model: application) do |form| %>
    <div class='form-element'>
      <%= form.label :name, 'name' %>
      <%= form.text_field :name %>
    </div>
    <div class='form-element'>
      <%= form.label :status, 'status' %>
      <%= form.select :status, [['sent', 'sent'],['pending','pending'],['rejected','rejected']] %>
    </div>
    <div class='form-element'>
      <%= form.label :via, 'via' %>
      <%= form.text_field :via %>
    </div>  
    <div class='form-element'>
      <%= form.label :notes, 'notes' %>
      <%= form.text_area :notes %>
    </div>
    <% if application.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>
        <ul>
          <% application.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
